
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form method="post" action="Create">
    <div class="form-group">
        <input type="text" name="kul" class="form-control" placeholder="Kullanıcı Adını girin" />
        <input type="text" name="sifre" class="form-control" placeholder="Şifrenizi girin" />
    </div>
    <div class="form-group">
        <input type="submit" value="Gönder" class="btn btn-primary" />
    </div>
</form>
@{
    if(TempData["Error"]!=null)
    {
        <h1>TempData["Error"]</h1>
    }
}

